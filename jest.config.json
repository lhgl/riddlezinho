{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/tests/**/*.test.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest",
    "^.+\\.js$": "babel-jest"
  },
  "testTimeout": 10000,
  "setupFilesAfterEnv": [
    "<rootDir>/tests/setup.js"
  ],
  "forceExit": true,
  "bail": false,
  "maxWorkers": 2,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "coverageReporters": ["text", "lcov"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/utils/logger.ts"
  ]
}

# RiddleZinho - Configuração Produção

# Aplicação
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# JWT
JWT_SECRET=change-this-to-a-secure-secret-key
JWT_EXPIRE=24h

# Oracle Database
ORACLE_HOST=oracle-db-host.com
ORACLE_PORT=1521
ORACLE_USER=riddlezinho_user
ORACLE_PASSWORD=secure-password-here
ORACLE_DB=ORCL

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Compressão
COMPRESSION_LEVEL=9
COMPRESSION_THRESHOLD=1024

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Segurança
TRUST_PROXY=1
CORS_ORIGIN=https://seu-dominio.com

# Monitoring (opcional)
SENTRY_DSN=https://your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
